<core:FragmentDefinition xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core">
<Dialog id="editProduct" title="Edit Product">

                <form:SimpleForm id="formToEditItem" class="sapUiNoContentPadding" width="auto">
                    <Label text="Product ID" />
                    <Text text="{ID}"></Text>

                    <Label text="Product Name"></Label>
                    <Input value="{Name}"></Input>

                    <Label text="Product Description"></Label>
                    <Input value="{Description}"></Input>
                </form:SimpleForm>
                <beginButton>
                    <Button text="Save" type="Emphasized"></Button>
                </beginButton>

                <endButton>
                    <Button text="Close" type="Transparent" press="onDialogClose"></Button>
                </endButton>

</Dialog>
</core:FragmentDefinition>