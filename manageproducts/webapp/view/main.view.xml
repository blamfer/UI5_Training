<mvc:View xmlns:form="sap.ui.layout.form" controllerName="manageproducts.controller.main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
        <Table id="products" items="{/Products}" alternateRowColors="{myClientModel>/alternateRowColors}" mode="SingleSelectLeft" selectionChange="onTableItemSelect" class="sapUiTinyMargin">
            <headerToolbar>
                <OverflowToolbar>
                    <Button id="editBtn" text="Edit" press="onEditPress" enabled='false'/>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <column>
                    <Text text = "Product ID"/>
                </column>
                <Column >
                    <Text text = "Product Name"/>
                </Column> 
                <Column>
                    <Text text = "Product Desciption"/>
                </Column> 
            </columns>
            <items>
                <Columnlistitem> 
                    <!-- <ObjectNumber number="{ID}"></ObjectNUmber> -->
                    <Text text="{ID}" />
                    <Text text="{Name}" />
                    <Text text="{Description}" />
                </Columnlistitem>
            </items>
        <Table/>
        <Dialog id="editProduct" title="Edit Product">
            <form:SimpleForm id="formToEditItem">
                <Label text="Product ID" />
                <Text text="{ID}"></Text>
        
                <Label text="Product Name"></Label>
                <Input text="{Name}"></Input>

                <Label text="Product Description"> </Label>
                <Input text="{Description}"></Input>
            </form:SimpleForm>
            <beginButton>
                <Button text="Save" type="Emphasized"></Button>
            </beginButton>
            <endButton>
               <Button text="Close" type="Transparent" press="onDialogClose"></Button>
            </endButton>
         </Dialog>
    </content>
    </Page>
</mvc:View>
